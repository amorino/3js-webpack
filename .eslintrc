{
  "extends": [
    "airbnb-base",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": 0,
    "max-len": 0,
    "semi": ["error", "never"],
    "arrow-body-style": 0,
    "indent": [1, 4, { "SwitchCase": 1 }],
    "comma-dangle": 0,
    "no-underscore-dangle": 0,
    "no-param-reassign": 0,
    "no-plusplus": 0,
    "object-curly-newline": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/no-named-default": 0
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "./webpack/config.test.babel.js"
      }
    }
  }
}
